{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "allowSyntheticDefaultImports": true
  },
  "references": [
    {
      "path": "./packages/mcp-server"
    },
    {
      "path": "./packages/mcp-auth"
    },
    {
      "path": "./packages/mcp-transport-stdio"
    },
    {
      "path": "./packages/mcp-transport-http"
    },
    {
      "path": "./packages/mcp-transport-websocket"
    },
    {
      "path": "./packages/mcp-auth-oidc"
    },
    {
      "path": "./packages/mcp-rate-limit"
    },
    {
      "path": "./packages/mcp-transport-sse"
    },
    {
      "path": "./packages/mcp-client"
    },
    {
      "path": "./packages/mcp-client-http"
    },
    {
      "path": "./packages/mcp-client-stdio"
    }
  ],
  "exclude": [
    "dist/**/*.ts",
    "tests/**/*.ts",
    "**/*.test.ts",
    "examples/**/*"
  ]
}